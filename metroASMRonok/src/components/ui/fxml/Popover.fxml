<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox maxWidth="280.0" spacing="12.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-border-color: #e4e4e7; -fx-border-radius: 8; -fx-padding: 16;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="4.0">
            <children>
                <Label text="Dimensions" textFill="#09090b">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <Label text="Set the dimensions for the layer." textFill="#71717a" wrapText="true" />
            </children>
        </VBox>

        <VBox spacing="8.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <Label text="Width" minWidth="60.0" textFill="#374151" />
                    <TextField text="100%" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="8.0">
                    <Label text="Height" minWidth="60.0" textFill="#374151" />
                    <TextField text="25px" HBox.hgrow="ALWAYS" />
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>