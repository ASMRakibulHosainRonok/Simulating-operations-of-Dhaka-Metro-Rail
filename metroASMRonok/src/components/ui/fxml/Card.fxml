<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-border-color: #e5e7eb; -fx-border-radius: 12;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
    <children>
        <VBox spacing="6.0">
            <children>
                <Label text="Card Title" textFill="#1f2937">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="Card Description goes here..." textFill="#6b7280">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
            <VBox.margin>
                <Insets bottom="16.0" />
            </VBox.margin>
        </VBox>

        <VBox>
            <children>
                <Label text="Card Content Area" />
            </children>
        </VBox>

        <VBox style="-fx-padding: 16 0 0 0;">
            <children>
                <Label text="Footer Content" textFill="#9ca3af" style="-fx-font-size: 12;" />
            </children>
        </VBox>
    </children>
</VBox>