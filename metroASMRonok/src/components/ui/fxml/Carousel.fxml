<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <HBox spacing="16.0">
                    <VBox alignment="CENTER" style="-fx-background-color: #f4f4f5; -fx-background-radius: 8; -fx-min-width: 200; -fx-min-height: 200;">
                        <children><Label text="1" style="-fx-font-size: 24; font-weight: bold;" /></children>
                    </VBox>
                    <VBox alignment="CENTER" style="-fx-background-color: #f4f4f5; -fx-background-radius: 8; -fx-min-width: 200; -fx-min-height: 200;">
                        <children><Label text="2" style="-fx-font-size: 24; font-weight: bold;" /></children>
                    </VBox>
                    <VBox alignment="CENTER" style="-fx-background-color: #f4f4f5; -fx-background-radius: 8; -fx-min-width: 200; -fx-min-height: 200;">
                        <children><Label text="3" style="-fx-font-size: 24; font-weight: bold;" /></children>
                    </VBox>
                </HBox>
            </content>
        </ScrollPane>

        <Button text="&lt;" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #e4e4e7; -fx-border-radius: 20;" StackPane.alignment="CENTER_LEFT">
            <StackPane.margin><Insets left="-12"/></StackPane.margin>
        </Button>
        <Button text="&gt;" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #e4e4e7; -fx-border-radius: 20;" StackPane.alignment="CENTER_RIGHT">
            <StackPane.margin><Insets right="-12"/></StackPane.margin>
        </Button>
    </children>
</StackPane>